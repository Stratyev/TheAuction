    <div class="row">
        <div class="success">
             <p>Изображение загружено, нажите на кнопку отмена, чтобы загрузить другое</p>
            @using (Html.BeginForm("DeleteFile", "Home"))
            {
                <div class="form-group">
                    @Html.Hidden("url", "", new { @class = "form-control", id = "urlsToDelete" })
                </div>
                <button type="submit" class="btn btn-primary">Отмена</button>
            }
        </div>
        <div class="sec">
            <section>
                <figure></figure>
                <p>Загрузка файлов</p>
                <p><small>Перетащите ваши файлы в эту область!</small></p>
                <input type="file" multiple="multiple" accept="image/x-png,image/jpeg">
            </section>
        </div>
        <div class="progress">
            <div class="progress-bar"></div>
            <div class="progress-value">0 %</div>
        </div>
        <div class="error"></div>
        <div class="images"></div>
    </div>

<div class="row">
    <div class="ready-button">
        <div class="text-center">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.Hidden("url", "", new { @class = "form-control", id = "urls" })
                </div>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            }
            
            <a class="btn btn-default" href="@Url.Action("IndexLots", "Auction")">Готово</a>
        </div>
    </div>
</div>

