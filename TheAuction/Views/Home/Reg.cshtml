@model TheAuction.Models.RegModel

@{
    ViewBag.Title = "Регистрация пользователя";
}
<h2>Регистрация пользователя:</h2>
<br />

@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Логин</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Пароль</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Фамилия</label>
        @Html.TextBoxFor(x => x.FigureSurname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Имя</label>
        @Html.TextBoxFor(x => x.FigureName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Отчество</label>
        @Html.TextBoxFor(x => x.FigurePatronymic, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Город</label>
        @Html.TextBoxFor(x => x.LocationName, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>

    @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
}